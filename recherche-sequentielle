#include <stdio.h>
#include <stdlib.h>

int main(){
    int i, r, nbr, tab[100];

// definir la taille du tableau
    do{
        printf("Entrer le nombre d'elements du tableau:");
        scanf("%d", &nbr);
            if(nbr>100 || nbr<=0){
                printf("\t Desole la taille maximale est de 100.\n");
            }
    }while(nbr>100 || nbr<=0);

// definir les elements du tableau
    printf("Entrer les elements du tableau:\n");
        for(i=0; i<nbr; i++){
            scanf("%d", &tab[i]);
    }
// Recherche de l'element
    printf("Entrer l'element a rechercher:");
        scanf("%d", &r);
    i=0;
    while(i<nbr&&r!=tab[i]){
        i++;
    }
    if(i<nbr){
        printf("L'element se trouve a la position:%d", i+1);
    }else{
        printf("Element non trouve");
    }
    return 0;
}
